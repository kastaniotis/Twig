{% set flagPath = {
    'el': asset('images/flags/el.png'),
    'en': asset('images/flags/en.png'),
} %}

{% for option in language.allOptions(true) %}
    <a href="{{ option.path }}" class="btn flag w-100">
        <img src="{{ flagPath[option.flag] }}" alt="Language flag: {{ option.flag }}">
    </a>
{% endfor %}